<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<Configurations>Debug;Release;Debug_Unimake</Configurations>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageId>Unimake.MessageBroker</PackageId>
		<Title>Unimake.MessageBroker</Title>
		<AssemblyVersion>2025.03.29.1108</AssemblyVersion>
		<Version>20250329.1108.08</Version>
		<Company>Unimake Software</Company>
		<Authors>Unimake Software</Authors>
		<Copyright>$(Authors) $([System.DateTime]::Now.Year) ©</Copyright>
		<Product>Unimake.MessageBroker</Product>
		<Description>Pacote de envio de mensagens, SNS e notificações via WhatsApp, Messenger, e-mail. Entre outros serviços de mensagens.</Description>
		<PackageProjectUrl>https://unimake.app/umessenger</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Unimake/Unimake.MessageBroker</RepositoryUrl>
		<PackageTags>Unimake;MessageBroker;Message;SNS;Broker;WhatsApp;Messenger;Direct</PackageTags>
		<ApplicationIcon>logo64x64.ico</ApplicationIcon>
		<PackageIcon>logo128x128.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
	  <Content Include="logo64x64.ico" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\..\resource\Image\logo128x128.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Unimake.AuthServer" Version="20250131.1813.25" />
		<PackageReference Include="Unimake.MessageBroker.Primitives" Version="20250320.1440.4" />
	</ItemGroup>
</Project>
